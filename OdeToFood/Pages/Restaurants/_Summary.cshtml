@using OdeToFood.Core
@model Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-outline-primary" asp-page="./Detail" asp-route-restaurantId="@Model.Id" title="Details">
            <i class="fa fa-search-plus"></i>
        </a>
    </div>
    <div class="panel-footer">
        <a class="btn btn-outline-primary" asp-page="./Edit" asp-route-restaurantId="@Model.Id" title="Edit">
            <i class="fa fa-edit"></i>
        </a>
    </div>
    <div class="panel-footer">
        <a class="btn btn-outline-primary" asp-page="./Delete" asp-route-restaurantId="@Model.Id" title="Delete">
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>